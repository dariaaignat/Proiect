@page
@model IgnatDariaLaboratoryAnalysis.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <h2>Delete Client</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this client?</h4>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Client.Name</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Client.Address</dd>

                <dt class="col-sm-3">Telephone Number</dt>
                <dd class="col-sm-9">@Model.Client.TelephoneNumber</dd>

                <dt class="col-sm-3">Work Point</dt>
                <dd class="col-sm-9">@(Model.Client.WorkPoint ?? "N/A")</dd>

                <dt class="col-sm-3">Delegate Name</dt>
                <dd class="col-sm-9">@(Model.Client.DelegateName ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Client.UserId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./View" class="btn btn-secondary">Back to List</a>
    </form>
</div>
