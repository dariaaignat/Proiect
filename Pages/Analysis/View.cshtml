@page
@model IgnatDariaLaboratoryAnalysis.Pages.Analysis.ViewModel
@{
    ViewData["Title"] = "Analysis List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Analysis List</h2>
        <a asp-page="./Add" class="btn btn-primary">Add New Analysis</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Culture Environment</th>
                    <th>Temperature (°C)</th>
                    <th>Completion Days</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Analyses != null && Model.Analyses.Any())
                {
                    @foreach (var analysis in Model.Analyses)
                    {
                        <tr>
                            <td>@analysis.Name</td>
                            <td>@analysis.Description</td>
                            <td>@analysis.CultureEnvironment</td>
                            <td>@(analysis.ThermostaticTemperature?.ToString("F2") ?? "N/A")</td>
                            <td>@(analysis.CompletionDays?.ToString() ?? "N/A")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Edit" asp-route-id="@analysis.Id"
                                       class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-page="./Delete" asp-route-id="@analysis.Id"
                                       class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No analyses found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>