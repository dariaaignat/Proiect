@page
@model IgnatDariaLaboratoryAnalysis.Pages.Analysis.DeleteModel
@{
    ViewData["Title"] = "Delete Analysis";
}

<div class="container mt-4">
    <h2>Delete Analysis</h2>
    <div class="alert alert-danger mt-3">
        <h4>Are you sure you want to delete this analysis?</h4>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Analysis.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Analysis.Description</dd>

                <dt class="col-sm-3">Culture Environment</dt>
                <dd class="col-sm-9">@Model.Analysis.CultureEnvironment</dd>

                <dt class="col-sm-3">Temperature</dt>
                <dd class="col-sm-9">@(Model.Analysis.ThermostaticTemperature?.ToString("F2") ?? "N/A") °C</dd>

                <dt class="col-sm-3">Completion Days</dt>
                <dd class="col-sm-9">@(Model.Analysis.CompletionDays?.ToString() ?? "N/A")</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Analysis.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./ViewAnalysis" class="btn btn-secondary">Back to List</a>
    </form>
</div>