@page
@model IgnatDariaLaboratoryAnalysis.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h2>Delete Order</h2>
    <div class="alert alert-danger mt-3">
        <h4>Are you sure you want to delete this order?</h4>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Client</dt>
                <dd class="col-sm-9">@Model.Order.Client.Name</dd>

                <dt class="col-sm-3">Employee</dt>
                <dd class="col-sm-9">@Model.Order.Employee.FullName</dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.Order.OrderDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Sample Name</dt>
                <dd class="col-sm-9">@Model.Order.SampleName</dd>

                <dt class="col-sm-3">Number of Samples</dt>
                <dd class="col-sm-9">@Model.Order.NumberOfSamples</dd>

                <dt class="col-sm-3">Manufacture Date</dt>
                <dd class="col-sm-9">@(Model.Order.SampleManufactureDate?.ToShortDateString() ?? "N/A")</dd>

                <dt class="col-sm-3">Expiration Date</dt>
                <dd class="col-sm-9">@(Model.Order.SampleExpirationDate?.ToShortDateString() ?? "N/A")</dd>

                <dt class="col-sm-3">Analyses</dt>
                <dd class="col-sm-9">
                    <ul class="list-unstyled mb-0">
                        @foreach (var analysisOrder in Model.Order.AnalysisOrders)
                        {
                            <li>@analysisOrder.Analysis.Name</li>
                        }
                    </ul>
                </dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Order.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./View" class="btn btn-secondary">Back to List</a>
    </form>
</div>